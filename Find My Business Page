$(document).ready(function() {
    
    $('.property-card').on('dragstart', function(event) {
        event.originalEvent.dataTransfer.setData('text/plain', event.target.outerHTML);
        $(this).addClass('dragging');
    });

    $('.property-card').on('dragend', function() {
        $(this).removeClass('dragging');
    });

    $('.grid-container').on('dragover', function(event) {
        event.preventDefault();
        $(this).addClass('drag-over');
    });

    $('.grid-container').on('dragleave', function() {
        $(this).removeClass('drag-over');
    });

    $('.grid-container').on('drop', function(event) {
        event.preventDefault();
        $(this).removeClass('drag-over');
        const draggedCardHTML = event.originalEvent.dataTransfer.getData('text/plain');
        const newCard = $(draggedCardHTML);
        $(this).append(newCard);
    });
});
